<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude specific bugs by code -->
    <Match>
        <Bug code="ICAST_IDIV_CAST_TO_DOUBLE" />
        <Bug code="ICAST_INT_CAST_TO_DOUBLE" />
        <Bug code="ICAST_INT_CAST_TO_LONG" />
        <Bug code="ICAST_LONG_CAST_TO_DOUBLE" />
        <Bug code="ICAST_QUESTIONABLE_LONG_CAST_TO_DOUBLE" />
    </Match>

    <!-- Exclude specific bug patterns -->
    <Match>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_OF_NONNULL_VALUE" />
        <Bug pattern="ES_COMPARING_STRINGS_WITH_EQ" />
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE" />
        <Bug pattern="NP_ALWAYS_NULL_RETURN" />
        <Bug pattern="UC_USELESS_OBJECT" />
    </Match>

    <!-- Exclude specific classes or packages -->
    <Match>
        <Class name="com.example.ExampleClass" />
        <Package name="com.example.internal" />
    </Match>
</FindBugsFilter>
